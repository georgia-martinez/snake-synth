{
  "compilerOptions": {
    "target": "ES2020",                        
    "module": "commonjs",                     
    "lib": ["ES2020", "DOM"],                 
    "jsx": "react-jsx",                       
    "strict": true,                           
    "moduleResolution": "node",               
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "outDir": "build",                        
    "resolveJsonModule": true,               
    "isolatedModules": true,                  
    "noEmit": true                            
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}